{
  "plugins": ["sentence-case"],
  "always-update": true,
  "skip-github-release": true,
  "pull-request-title-pattern": "chore: bump version to ${version} and update changelog",
  "pull-request-header": "ðŸ¤–: I have generated a release changelog",
  "pull-request-footer": "This PR was automatically generated by ðŸ¤–.",
  "include-component-in-tag": false,
  "packages": {
    ".": {
      "release-type": "node",
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features",
          "hidden": false,
          "type-plural": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes",
          "hidden": false,
          "type-plural": "Bug Fixes"
        },
        {
          "type": "refactor",
          "section": "Code Refactoring",
          "hidden": false,
          "type-plural": "Code Refactoring"
        },
        {
          "type": "test",
          "section": "Tests",
          "hidden": false,
          "type-plural": "Tests"
        },
        {
          "type": "changed",
          "section": "Changed",
          "hidden": false,
          "type-plural": "Changes"
        },
        {
          "type": "docs",
          "section": "Documentation",
          "hidden": false,
          "type-plural": "Documentation"
        },
        {
          "type": "chore",
          "section": "Miscellaneous",
          "hidden": false,
          "type-plural": "Chores"
        },
        {
          "type": "ci",
          "section": "CI",
          "hidden": false,
          "type-plural": "CI"
        }
      ]
    }
  }
}
